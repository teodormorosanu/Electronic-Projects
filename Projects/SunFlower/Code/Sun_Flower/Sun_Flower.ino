void SensorsSetup() { // Sensors setup
  pinMode(HUMIDITY, INPUT); // Setting the HW pin
  pinMode(WATER, INPUT); // Setting the water level sensor pin
}

void PumpSetup() { // Pump setup
  pinMode(IN1, OUTPUT); // Setting the MX1508 IN1
}

void Watering() { // Watering method
  if(analogRead(HUMIDITY) >= dryness) {
      if(safeTime < maxSafeTime) {
        digitalWrite(IN1, HIGH);
        safeTime++;
      } else {
        digitalWrite(IN1, LOW);
        while(1) {
          display.setTextSize(2);
          display.setTextColor(SSD1306_WHITE);
          display.cp437(true);
          display.setCursor(2, 17);
          display.print("ERROR - Restart");
          display.display();
        }
      }
    } else {
      safeTime = 0;
      digitalWrite(IN1, LOW);
    }
}

