void DisplaySetup() { // Display setup
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  display.clearDisplay();
  display.display();
}
void Display() { // Display loop
  int water = analogRead(A1);
  display.setTextSize(2);
  display.setTextColor(SSD1306_WHITE);
  display.cp437(true);
  display.setCursor(60, 0);
  display.println("Water");
  if(water < 90) {
    display.drawBitmap(0, 0, waterDrop100, 128, 32, WHITE);
    display.setCursor(68, 17);
    display.print("100%");
  } else if(water < 95) {
    display.drawBitmap(0, 0, waterDrop75, 128, 32, WHITE);
    display.setCursor(75, 17);
    display.print("75%");
  } else if(water < 100) {
    display.drawBitmap(0, 0, waterDrop50, 128, 32, WHITE);
    display.setCursor(75, 17);
    display.print("50%");
  } else if(water < 105) {
    display.drawBitmap(0, 0, waterDrop25, 128, 32, WHITE);
    display.setCursor(75, 17);
    display.print("25%");
  } else {
    display.drawBitmap(0, 0, waterDrop0, 128, 32, WHITE);
    display.setCursor(70, 17);
    display.print("<10%");
    display.display();
    delay(period / 2);
    display.clearDisplay();
  }
  if(millis() >= timeNow + period) {
    timeNow += period;
    display.display();
  }
  display.clearDisplay();
  delay(period / 2);
}

void SensorsSetup() { // Sensors setup
  pinMode(A0, INPUT); // Setting the HW pin
  pinMode(A1, INPUT); // Setting the water level sensor pin
}

void PumpSetup() { // Pump setup
  pinMode(motorIn, OUTPUT); // Setting the motorIn pin
}

void Watering() { // Watering method
  if(analogRead(A0) >= 500) {
      if(safeTime < 5) {
        digitalWrite(motorIn, HIGH);
        safeTime++;
      } else {
        digitalWrite(motorIn, LOW);
        while(1) {
          display.setTextSize(2);
          display.setTextColor(SSD1306_WHITE);
          display.cp437(true);
          display.setCursor(2, 30);
          display.print("ERROR");
          display.display();
        }
      }
    } else {
      safeTime = 0;
      digitalWrite(motorIn, LOW);
    }
}

void setup () {
  DisplaySetup(); // Display setup
  SensorsSetup(); // Sensors setup
  PumpSetup(); // Pump setup
}

void loop () {
    Display(); // Display loop
    Watering(); // Watering method
}